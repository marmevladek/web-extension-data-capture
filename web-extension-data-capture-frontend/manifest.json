{
  "manifest_version": 3,
  "name": "Wikipedia Data Collector",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "*://ru.wikipedia.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Wikipedia Data Collector"
  }
}